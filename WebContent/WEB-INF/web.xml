<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>SolrDataAPI</display-name>
	<servlet>
		<servlet-name>solr_servlet</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>edu.indiana.d2i.htrc.solr.proxy</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.spi.container.ContainerRequestFilters</param-name>
			<param-value>com.sun.jersey.api.container.filter.LoggingFilter</param-value>
		</init-param>
		<!-- <init-param> <param-name>com.sun.jersey.spi.container.ContainerResponseFilters</param-name> 
			<param-value>com.sun.jersey.api.container.filter.LoggingFilter</param-value> 
			</init-param> -->
		<init-param>
			<param-name>solr.shards.head.epr</param-name>
			<param-value>http://htrc1.pti.indiana.edu:9447</param-value> 
		</init-param>
		<init-param>
			<param-name>solr.marc.epr</param-name>
			<param-value>http://chinkapin.pti.indiana.edu:9444</param-value>
		</init-param>
		<init-param>
			<param-name>solr.marc.core.name</param-name>
			<param-value>marc</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>solr_servlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
</web-app>